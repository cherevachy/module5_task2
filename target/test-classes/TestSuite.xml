<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Test Plan" verbose="1">
    <listeners>
        <listener class-name="org.uncommons.reportng.HTMLReporter"/>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
        <listener class-name="com.epam.ta.core.webdriver.listener.MakingScreenshotsOnErrorListener"/>
    </listeners>

    <test name="Smoke Test" preserve-order="true">
        <classes>
            <class name="com.epam.tst.BaseTest"/>
            <class name="com.epam.tst.GmailTest"/>
        </classes>
    </test>
</suite>